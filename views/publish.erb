<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

    <!-- 可能是适配移动端用的 -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=0"/>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="format-detection" content="telephone=no">

    <link rel="stylesheet" type="text/css" href="style.css">

    <script type="text/javascript" src="dateSelector.js"></script>
    <script type="text/javascript" src="utils.js"></script>

    <title>停车位发布</title>
  </head>

  <body>
    <div id="center_board">
      <h2>停车位发布</h2>

      <div class="line">
        空闲开始日期:
        <select id="selYear_s"></select>
        <select id="selMonth_s"></select>
        <select id="selDate_s"></select>
      </div>

      <div class="line">
        空闲结束日期:
        <select id="selYear_e"></select>
        <select id="selMonth_e"></select>
        <select id="selDate_e"></select>
      </div>

      <div class="line">
        空闲车位编号:
        <input id="parking_deck" type="text">
      </div>

      <div id="btn_board">
        <button id="submit">提交</button>
        <button id="cancel">取消</button>
      </div>

      <div id="copyright"></div>

      <script type="text/javascript">
        var selYear_s = window.document.getElementById("selYear_s");
        var selMonth_s = window.document.getElementById("selMonth_s");
        var selDate_s = window.document.getElementById("selDate_s");

        var selYear_e = window.document.getElementById("selYear_e");
        var selMonth_e = window.document.getElementById("selMonth_e");
        var selDate_e = window.document.getElementById("selDate_e");

        new DateSelector(selYear_s, selMonth_s, selDate_s, selYear_e, selMonth_e, selDate_e);

        var submit = window.document.getElementById("submit");
        submit.onclick = function() {
          post("/publish", {year: '1989'});
        }

        var cancel = window.document.getElementById("cancel");
        cancel.onclick = function() {
          alert("取消");
        }

        copyright.innerHTML = "&copy; 2016-" + (new Date()).getFullYear() + " by zhanglintc";
      </script>
    </div>
  </body>
</html>